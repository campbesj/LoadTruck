<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HDK</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link rel="icon" href="/Content/HDKLogo.jpg">


    <style type="text/css">
        div.buttons {
            display: inline-block;
            margin: 10px 0;
        }

        .button {
            display: block;
            float: left;
            min-width: 254px;
            border-top: 1px solid #CCC;
            border-left: 1px solid #CCC;
            border-bottom: 1px solid #AAA;
            border-right: 1px solid #AAA;
            background-color: #003E3E3;
            font-family: Verdana, Helvetica, sans-serif;
            font-size: 100%;
            line-height: 110%;
            text-decoration: none !important;
            color: #333 !important;
            margin: 0 15px 0 0;
            padding: 5px 10px 5px 7px;
            cursor: pointer;
            box-shadow: 1px 1px 2px #969696;
            -moz-box-shadow: 1px 1px 2px #969696; /* Firefox */
            -webkit-box-shadow: 1px 1px 2px #969696; /* Safari and Chrome */
        }

            .button img {
                margin: 0 3px -3px 0 !important;
                padding: 0;
                border: none;
                width: 16px;
                height: 16px;
                float: none;
            }

            /*--------------------------*/
            /* Button colors - Standard
        /*--------------------------*/
            .button:hover {
                border: 1px solid #999;
                background-color: #169CDB;
                color: white !important;
            }

        /*--------------------------*/
        /* Button colors - Positive
        /*--------------------------*/
        .positive:hover {
            background-color: #009CDB;
            border: 1px solid #4800ff;
            color: #264409 !important;
        }

        /*--------------------------*/
        /* Button colors - Negative
        /*--------------------------*/
        .negative:hover {
            background-color: #FBE3E4;
            border: 1px solid #FBC2C4;
            color: #8A1F11 !important;
        }

        }
    </style>

</head>


